<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    app:cardElevation="2dp"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="5dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        >

        <RelativeLayout
            android:id="@+id/rellay1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp">


            <ImageView
                android:layout_gravity="left"
                android:src="@drawable/avatar"
                android:id="@+id/imgView_proPic2"
                android:layout_width="60dp"
                android:layout_height="60dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/imgView_proPic2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="10dp"
                    android:text="Rajeet Nakarmi"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="11 hrs"
                    android:textSize="13sp" />

            </LinearLayout>

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rellay1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="6dp"
            android:text="This is Status of my own This is Status of my own This is Status of my ownThis is Status of my ownThis is Status of my own"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/rellaypst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_status"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            >
            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:src="@drawable/ic_launcher_background"
                android:id="@+id/imgView_proPic"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lcs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rellaypst"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp">

            <Button
                android:text="Like"
                android:id="@+id/likebtn"
                android:layout_height="40dp"
                android:layout_width="125dp"
                android:textColor="@color/black"
                android:layout_marginRight="10dp"
                />

            <Button
                android:text="Comment"
                android:id="@+id/commentbtn"
                android:layout_toRightOf="@id/likebtn"
                android:layout_height="40dp"
                android:layout_width="125dp"
                android:textColor="@color/black"
                android:layout_marginRight="10dp"
                />

            <Button
                android:text="Share"
                android:id="@+id/sharebtn"
                android:layout_toRightOf="@id/commentbtn"
                android:layout_height="40dp"
                android:layout_width="125dp"
                android:textColor="@color/black"
                />

        </RelativeLayout>>




    </RelativeLayout>
</androidx.cardview.widget.CardView>